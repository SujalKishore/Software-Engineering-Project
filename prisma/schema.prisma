// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change from "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  username      String?   @unique
  email         String?   @unique
  password      String?
  role          String    @default("user")
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  resetToken    String?
  resetTokenExpiry DateTime?
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model InventoryItem {
  id           String   @id @default(uuid())
  code         String   @unique
  name         String
  type         String
  category     String
  location     String
  stockQty     Float
  uom          String
  safetyStock  Float
  reorderLevel Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id             String   @id @default(uuid())
  orderId        String   @unique
  customer       String
  region         String
  product        String
  orderQty       Int
  bookedOn       DateTime
  dueDate        DateTime
  status         String
  dispatchStatus String   @default("Not Dispatched")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model DispatchRecord {
  id          Int      @id @default(autoincrement())
  lrNo        String
  date        DateTime @default(now())
  customer    String
  region      String
  transporter String
  truckNo     String
  route       String
  cartons     Int
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductionRecord {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  line       String
  shift      String
  product    String
  target     Int
  actual     Int
  efficiency Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ScrapRecord {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  line       String
  defectType String
  quantity   Int
  reason     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PendingRequest {
  id          String   @id @default(uuid())
  type        String   // "CREATE", "UPDATE", "DELETE"
  entity      String   // "Order", "InventoryItem", "DispatchRecord", etc.
  data        String   // JSON stringified data
  status      String   @default("PENDING") // "PENDING", "APPROVED", "REJECTED"
  requestedBy String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
